<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This page is made available for demo purposes"
        android:textSize="25sp"
        android:layout_marginTop="150dp"
        android:layout_marginStart="16dp"
        android:id="@+id/title_text"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Report"
        android:layout_below="@+id/check_reports_btn"
        android:layout_marginStart="32dp"
        android:id="@+id/create_report_btn"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opt-out of the System"
        android:layout_marginTop="30dp"
        android:layout_marginStart="32dp"
        android:layout_below="@+id/title_text"
        android:id="@+id/check_reports_btn"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Reports"
        android:layout_marginStart="32dp"
        android:layout_below="@+id/create_report_btn"
        android:id="@+id/download_reports_btn"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Covid-19 Status"
        android:layout_marginStart="32dp"
        android:layout_below="@+id/download_reports_btn"
        android:id="@+id/report_covid_status_btn"
        />




</RelativeLayout>