<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings Fragment"
        android:textSize="30sp"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Report"
        android:layout_centerInParent="true"
        android:id="@+id/create_report_btn"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Reports"
        android:layout_above="@+id/create_report_btn"
        android:layout_centerInParent="true"
        android:id="@+id/check_reports_btn"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Reports"
        android:layout_centerInParent="true"
        android:layout_below="@+id/create_report_btn"
        android:id="@+id/download_reports_btn"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Covid-19 Status"
        android:layout_centerInParent="true"
        android:layout_below="@+id/download_reports_btn"
        android:id="@+id/report_covid_status_btn"
        />




</RelativeLayout>